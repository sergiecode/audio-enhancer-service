# Audio Enhancement Service - Environment Variables
# Copy this file to .env and modify as needed

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
WORKER_COUNT=1

# File Storage Paths
UPLOAD_DIR=uploads
OUTPUT_DIR=outputs
MODELS_DIR=models

# File Processing
MAX_FILE_SIZE=100  # MB

# AI Models Configuration
DEMUCS_MODEL=htdemucs
SPLEETER_MODEL=spleeter:2stems-16kHz

# CORS Settings (comma-separated)
CORS_ORIGINS=*

# Logging
LOG_LEVEL=INFO

# Production Settings (uncomment for production)
# API_HOST=0.0.0.0
# WORKER_COUNT=4
# LOG_LEVEL=WARNING
